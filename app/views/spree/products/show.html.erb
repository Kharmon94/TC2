<% @body_id = 'product-details' %>

<% cache cache_key_for_product do %>
  <div data-hook="product_show" class="row" style="margin-top: 4%;" itemscope itemtype="https://schema.org/Product" >
    <div class="col-md-4 col-sm-5" data-hook="product_left_part" style="background-color: black; padding-top: 3%; padding-bottom: 3%;">
      <div data-hook="product_left_part_wrap">
        <div id="product-images" data-hook="product_images">
          <div id="main-image" class="panel panel-default" data-hook>
            <div class="panel-body text-center" style="padding: 3px;">
              <%= product_image(@product, itemprop: "image", style: "width: 100%; height: 300px; border-radius: 5px;") %>
            </div>
          </div>
          <div id="thumbnails" align="center" data-hook>
            <%= render partial: 'thumbnails' %>
          </div>
        </div>

        <div data-hook="product_properties" align="center">
          <%= render partial: 'properties' %>
        </div>

        <div data-hook="promotions">
          <%= render partial: 'promotions' %>
        </div>
      </div>
    </div>

    <div class="col-md-8 col-sm-7" data-hook="product_right_part" >
      <div data-hook="product_right_part_wrap">
        <div id="product-description" data-hook="product_description" align="center">


          <h1 class="product-title" itemprop="name" style="font-family: 'Staatliches', cursive; margin-top: 10%"><%= @product.name %></h1>

          <div itemprop="description" data-hook="description" align="left" style="margin-top: 5%; margin-bottom: 5%; width: 50%; height: 40%;"> 
            <%= product_description(@product) %>
          </div>

          <div id="cart-form" data-hook="cart_form" align="left" style="margin-left: 10%; margin-bottom: 16.5%; width: 60%;">
            <%= render partial: 'cart_form' %>
          </div>

        </div>

        <div id="taxon-crumbs" class=" five " data-hook="product_taxons">
          <%= render partial: 'taxons' %>
        </div>
      </div>
    </div>
  </div>
<% end %>
