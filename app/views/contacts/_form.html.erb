  <div class="field">
    <%= form.label :service_type %>
    <%= form.select :service_type, ['One Time', 'Weekly', 'Bi-Weekly', 'Monthly'] %>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_area :description %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
