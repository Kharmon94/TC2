    <div class="row">
      <div>
        <div class="col s3" style="border: solid; border-width: 5px; border-color: white; border-radius: 10px; height: 175px; padding: 10px; margin: 15px; width: 255px">
          <div>
            <img src="https://takecareassets.s3.amazonaws.com/left.png" style="width: 125px; height: auto; margin-top: 1%">
          </div>
          <div class="field" style="margin-top: 10px;">
            <%= form.file_field :left_picture, class: "btn waves-effect waves-light", style: "background-color: green; color: black; width:225px;" %>
          </div>
        </div>

        <div class="col s3" style="border: solid; border-width: 5px; border-color: white; border-radius: 10px; height: 175px; padding: 10px; margin: 15px; width: 255px">
          <div>
            <img src="https://takecareassets.s3.amazonaws.com/right.png" style="width: 125px; height: auto; margin-top: 1%">
