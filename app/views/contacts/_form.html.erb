<%= form_with(model: contact, local: true) do |form| %>
<div class="row" id="error_explanation_row">
  <% if contact.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(contact.errors.count, "error") %> prohibited this contact from being saved:</h2>

      <ul>
      <% contact.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
</div>

<div class="row" >
  <div class="col s5" style="margin-right: 15%; border-left: solid; border-color: white; border-width: 2px">

    <div class="field">
      <%= form.label :first_name, style: "color: white;" %>
      <%= form.text_field :first_name, style: "color: white;" %>
    </div>
    
    <div class="field">
      <%= form.label :last_name, style: "color: white;" %>
      <%= form.text_field :last_name, style: "color: white;" %>
    </div>

    <div class="field">
        <%= form.label :email, style: "color: white;" %>
        <%= form.email_field :email, style: "color: white;" %>
    </div>

    <div class="field">
      <%= form.label :phone_number, style: "color: white;" %>
      <%= form.telephone_field :phone_number, style: "color: white;" %>
    </div>

  </div>

  <div class="col s5" style="border-left: solid; border-color: white; border-width: 2px">
    <div class="field">
      <%= form.label :address, style: "color: white;" %>
      <%= form.text_field :address, style: "color: white;" %>
    </div>

    <div class="field">
      <%= form.label :city, style: "color: white;" %>
      <%= form.text_field :city, style: "color: white;" %>
    </div>

    <div class="field">
      <%= form.label :state, style: "color: white;" %>
      <%= form.text_field :state, style: "color: white;" %>
    </div>

    <div class="field">
      <%= form.label :zip, style: "color: white;" %>
      <%= form.text_field :zip, style: "color: white;" %>
    </div>

    <div class="field">
      <%= form.label :country, style: "color: white;" %>
      <%= form.country_select :country, {priority_countries: ["US"], include_blank: "Select Country"}, class: 'form-control' %>
    </div>
  </div>
  
</div>

<div class="row" style="margin-top: 10%">
  <div class="col s5">
    <h3><strong>SHOE DETAILS</strong></h3>
  </div>
</div>

<div class="row">

  <div class="col s6" style="border-left: solid; border-color: white; border-width: 2px">
    <div class="field" style="margin-bottom: 2%">
      <%= form.label :shoe_size, style: "color: white;" %>
      <%= form.select :shoe_size, [

        'Infant/toddler', 
        'Children', 
        '4 - 4.5',
        '5 - 5.5',
        '6 - 6.5',
        '7 - 7.5',
        '8 - 8.5',
        '9 - 9.5',
        '10 - 10.5',
        '11 - 11.5',
        '12 - 12.5',
        '13 - 13.5',
        '14 - 14.5',
        '15 - 15.5',
        '16 - 16.5',
        '17 - 17.5',
        '18 - 18.5'

        ] %>
    </div>

    <div class="field" style="margin-bottom: 2%">
      <%= form.label :gender, style: "color: white;" %>
      <%= form.select :gender, ['Mens', 'Womans'] %>
    </div>

    <div class="field" style="margin-bottom: 2%">
      <%= form.label :shoe_type, style: "color: white;" %>
      <%= form.select :shoe_type, ['Sneaker', 'Boot', 'Slipper', 'Traditional', 'High-Heeled'] %>
    </div>

    <div class="field" style="margin-bottom: 2%">
      <%= form.label :shoe_model, style: "color: white;" %><br>
      <i style="font-size: 10px">*Example: Air Jordan 1</i>
      <%= form.text_field :shoe_model, style: "color: white" %>
    </div>

  </div>
  <div class="col s6">

    <div class="field" style="margin-bottom: 2%">
      <%= form.label :service_type, style: "color: white;" %>
      <%= form.select :service_type, ['Restoration', 'Custom'] %>
    </div>

    <div class="field" style="margin-bottom: 2%">
      <%= form.label :description, style: "color: white;" %>
      <%= form.text_area :description, style: "height: 112px; color: white;" %>
    </div>
  </div>
    


</div>

<div class="row" style="margin-top: 10%;">
  <div class="row">
    <h3><strong>SHOE IMAGES</strong></h3>
  </div>
</div>
  <div class="row" align="center">

